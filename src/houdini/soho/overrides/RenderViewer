#include "$HH/soho/overrides/RenderViewer"

// Viewport overrides for Lava
{
    override.inherit  CommonView
    override.name	  lava

    // Force the render to go to the "ip" device
    lv_picture			        [ "iprsocket:$socket" ]
    lv_device			        [ "" ]
    lv_image_mplay_socketport   [ "$socket" ]
    lv_stylesheets		        [ "$stylesheets" ]
    lv_preview			        [ "$preview" ]
    lv_relightingbuffer		    [ "$relightingbuffer" ]
    lv_renderinterrupt		    [ "$renderinterrupt" ]
    lv_previewtime		        [ "$previewtime" ]
    lv_previewmode		        [ "$previewmode" ]
    lv_generate_opid		    [ 1 ]
}