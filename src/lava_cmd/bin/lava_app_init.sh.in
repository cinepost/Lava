#!/bin/bash

if [ -z "$LAVA_HOME" ]
then
    # $LAVA_HOME is not set
    export LAVA_HOME=@LAVA_INST_DIR@
fi

export LD_LIBRARY_PATH=/lib/x86_64-linux-gnu:/usr/lib/x86_64-linux-gnu:$LAVA_HOME/lib:$LAVA_HOME/3rdparty/lib:$LAVA_HOME/render_passes:$LD_LIBRARY_PATH
export PATH=$HFS/bin:$PATH:$LAVA_HOME/3rdparty/bin:$LAVA_HOME/bin

# source virtualenv
#source @LAVA_INST_DIR@venv/bin/activate

# make lava default cache dir
mkdir -p /tmp/lava/cache

