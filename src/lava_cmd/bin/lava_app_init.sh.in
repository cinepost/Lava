#!/bin/bash

if [ -z "$LAVA_HOME" ]
then
    # $LAVA_HOME is not set
    export LAVA_HOME=@LAVA_INST_DIR@
fi

export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/lib/x86_64-linux-gnu:/usr/lib/x86_64-linux-gnu:$H/dsolib:$LAVA_HOME/lib:$LAVA_HOME/3rdparty/lib:$LAVA_HOME/render_passes
export PATH=$PATH:$HFS/bin:$LAVA_HOME/3rdparty/bin:$LAVA_HOME/bin
export HIH=$HIH
export HOSTNAME=$HOSTNAME

# source virtualenv
#source @LAVA_INST_DIR@venv/bin/activate

# make lava default cache dir
mkdir -p /tmp/lava/cache

