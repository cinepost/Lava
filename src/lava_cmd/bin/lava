#!/bin/bash

# If $0 is a symlink, resolve it to a file
f="$0"
if [ -L "$f" ]; then
    f="$(readlink -f "$f" 2> /dev/null)"
    if [ "$?" != "0" ]; then
	f="$0"
    fi
fi

# Initialize application environment.
APP_DIR="$(dirname "$f")"
source "${APP_DIR}/app_init.sh" "${APP_DIR}"

# Now run the requested binary.
exec "$f-bin" "$@"

